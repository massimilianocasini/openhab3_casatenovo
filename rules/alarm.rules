rule "Antifurto cambio stato swicth case"
when 
    Item Prodino0_optoIn0 changed
then
val telegramActions = getActions("telegram","telegram:telegramBot:Telegram_Bot")
//var String Prodino0_optoIn0_state = Prodino0_optoIn0.state

// switch(Prodino0_optoIn0_state) {
//   case "INSERITO" : {
//     telegramActions.sendTelegram("Antifurto INSerito!Segnalazione da swicth case!")
//   }
//   case "DISINSERITO": {
//     telegramActions.sendTelegram("Antifurto Disisnserito!Segnalazione da swicth case!")
//   }
// }
switch(Prodino0_optoIn0) {
  case Prodino0_optoIn0.state == "INSERITO" : {
    telegramActions.sendTelegram("Antifurto INSerito!Segnalazione da swicth case!")
  }
  case Prodino0_optoIn0.state == "INSERITO" &&
   (DaikinACUnit_Power_Studio.state == ON || 
    DaikinACUnit_Power_Soggiorno.state == ON || 
    DaikinACUnit_Power_Cameretta.state == ON || 
    DaikinACUnit_Power_Letto.state == ON
    ) : {
        DaikinACUnit_Power_Studio.sendCommand(OFF)
        DaikinACUnit_Power_Soggiorno.sendCommand(OFF)
        DaikinACUnit_Power_Cameretta.sendCommand(OFF)
        DaikinACUnit_Power_Letto.sendCommand(OFF)
    }
  case Prodino0_optoIn0.state == "INSERITO" && 
  (TapparellaLettoPosition.state > 0 ||
   TapparellaStudioPosition.state > 0 
   ) : { 
       TapparellaLettoPosition.sendCommand(0)
       TapparellaStudioPosition.sendCommand(0)
      } 
  case Prodino0_optoIn0.state == "DISINSERITO": { 
    telegramActions.sendTelegram("Antifurto Disisnserito!Segnalazione da swicth case!")
  }
  case Prodino0_optoIn0.state == "DISINSERITO" && SunElevation.state > -3 && now.getHour > 8 : { 
    TapparellaLettoPosition.sendCommand(100)
    TapparellaStudioPosition.sendCommand(100)
  }
}
end

