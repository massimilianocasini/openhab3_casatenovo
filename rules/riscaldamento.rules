rule "invia a telegram lo stato caldaia ON"
when
    Item FGS221_002_SwitchBinary2 changed from OFF to ON
then
    FGS221_002_SwitchBinary2_N.postUpdate(1)
    var riscaldamentomodo = Riscaldamento_Modo.state as Number
    var tempint = Lumi1T.state as Number
    var setpointauto = Riscaldamento_Auto_SP.state as Number
    var setpointmanu = Riscaldamento_Man_SP.state as Number
    val telegramAction = getActions("telegram","telegram:telegramBot:Telegram_Bot")
    telegramAction.sendTelegram("Modo: " + riscaldamentomodo + " Termosifoni ON Temp Attuale: " + tempint + " SetPointAuto:" + setpointauto + " SetPointManu:" + setpointmanu )
end 

rule "invia a telegram lo stato caldaia OFF"
when
    Item FGS221_002_SwitchBinary2 changed from ON to OFF
then
    FGS221_002_SwitchBinary2_N.postUpdate(0)
    var riscaldamentomodo = Riscaldamento_Modo.state as Number
    var tempint = Lumi1T.state as Number
    var setpointauto = Riscaldamento_Auto_SP.state as Number
    var setpointmanu = Riscaldamento_Man_SP.state as Number
    val telegramAction = getActions("telegram","telegram:telegramBot:Telegram_Bot")
    telegramAction.sendTelegram("Modo: " + riscaldamentomodo + " Termosifoni OFF Temp Attuale: " + tempint + " SetPointAuto:" + setpointauto + " SetPointManu:  " + setpointmanu )
end 

