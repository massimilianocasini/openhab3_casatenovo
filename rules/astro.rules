rule "Apri tapparelle ad orario 1"
when
    Time cron "0 30 7 ? * MON,TUE,WED,THU,FRI *"
then
    if(Prodino0_optoIn0.state == "DISINSERITO" && isBankHoliday == false && isWeekend == false && TapparellaLettoStatus.state == "stop" && TapparellaStudioStatus.state == "stop") 
    {
       if(tapparellaLettoPosition == 0)
       {
        TapparellaLettoPosition.sendCommand(10)
        TapprellaStudioPosition.sendCommand(10)
       }
    }
end

